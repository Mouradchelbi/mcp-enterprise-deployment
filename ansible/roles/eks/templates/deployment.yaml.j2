apiVersion: apps/v1
kind: Deployment
metadata:
  name: mcp-server
  namespace: {{ environment }}
spec:
  replicas: {{ app_replicas }}
  selector:
    matchLabels:
      app: mcp-server
  template:
    metadata:
      labels:
        app: mcp-server
    spec:
      containers:
      - name: mcp-server
        image: {{ ecr_registry }}/{{ ecr_repository }}:{{ git_commit }}
        ports:
        - containerPort: 8000
        env:
        - name: DATABASE_URL
          value: "postgresql://{{ db_credentials.username }}:{{ db_credentials.password }}@{{ rds_endpoint }}/mcpdb"
        - name: REDIS_URL
          value: "redis://{{ redis_endpoint }}:6379"
